<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="_2vdm_spec_generator.View.TimeoutPopup"
    Size="350,300"
    CanBeDismissedByTappingOutsideOfPopup="False">

    <VerticalStackLayout Padding="10" Spacing="6"
                         BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}">

        <!-- タイトルバー -->
        <Frame BackgroundColor="{AppThemeBinding Light=#007AFF, Dark=#1E88E5}"
               Padding="6"
               HasShadow="False"
               CornerRadius="4"
               Margin="0,0,0,6">
            <Label Text="⏱ タイムアウト設定"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White" />
        </Frame>

        <Label Text="タイムアウト秒数:" 
               FontAttributes="Bold"
               FontSize="15"
               TextColor="{AppThemeBinding Light=#222, Dark=#EEE}" />

        <!-- 秒数入力欄 -->
        <Frame CornerRadius="5"
               BorderColor="{AppThemeBinding Light=#888, Dark=#555}"
               Padding="2"
               HasShadow="False"
               Margin="0">
            <Entry x:Name="SecondsEntry"
                   Placeholder="例: 30"
                   Keyboard="Numeric"
                   TextColor="{AppThemeBinding Light=#000, Dark=#FFF}"
                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#AAA}"
                   FontSize="14" />
        </Frame>

        <Label Text="遷移先:" 
               FontAttributes="Bold"
               FontSize="15"
               TextColor="{AppThemeBinding Light=#222, Dark=#EEE}" />

        <!-- 遷移先入力欄 -->
        <Frame CornerRadius="5"
               BorderColor="{AppThemeBinding Light=#888, Dark=#555}"
               Padding="2"
               HasShadow="False"
               Margin="0">
            <Entry x:Name="TargetEntry"
                   Placeholder="例: 画面A"
                   TextColor="{AppThemeBinding Light=#000, Dark=#FFF}"
                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#AAA}"
                   FontSize="14" />
        </Frame>

        <!-- ボタン群 -->
        <HorizontalStackLayout HorizontalOptions="End"
                               Spacing="10"
                               Margin="0,6,0,0">
            <Button Text="OK"
                    BackgroundColor="{AppThemeBinding Light=#007AFF, Dark=#1E88E5}"
                    TextColor="White"
                    CornerRadius="5"
                    HeightRequest="28"
                    WidthRequest="80"
                    Clicked="OnConfirmClicked" />

            <Button Text="キャンセル"
                    BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#444}"
                    TextColor="{AppThemeBinding Light=#333, Dark=#EEE}"
                    CornerRadius="5"
                    HeightRequest="28"
                    WidthRequest="80"
                    Clicked="OnCancelClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
