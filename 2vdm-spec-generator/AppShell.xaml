<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_2vdm_spec_generator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_2vdm_spec_generator"
    Shell.FlyoutBehavior="Disabled"
    Title="_2vdm_spec_generator">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*"
              VerticalOptions="Center">
            <Label Text="2VDM++Spec"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   TranslationX="-110"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="Black"/>
        </Grid>
    </Shell.TitleView>

    <ShellContent
        Title="StartPage"
        ContentTemplate="{DataTemplate local:StartPage}"
        Route="StartPage" />

    <!-- MainPage -->
    <ShellContent
        Title="MainPage"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- NoCodePage -->
    <ShellContent
        Title="NoCodePage"
        ContentTemplate="{DataTemplate local:NoCodePage}"
        Route="NoCodePage" />

</Shell>
